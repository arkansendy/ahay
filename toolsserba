def noitce_down():
        os.system('CLS')
        print('List akan tertutup dalam 10 detik secara otomatis !')
        time.sleep(3)
        os.system('CLS')

class Product:
    def __init__(self, name, price):
        self.name = name
        self.price = price

class Node:
    def __init__(self, product=None, next=None):
        self.product = product
        self.next = next

class ProductList:
    def __init__(self):
        self.head = None

    def add_product(self, product):
        new_node = Node(product)

        if self.head is None:
            self.head = new_node
            return

        current_node = self.head
        while current_node.next is not None:
            current_node = current_node.next

        current_node.next = new_node

    def remove_product(self, product):
        current_node = self.head
        prev_node = None

        while current_node is not None:
            if current_node.product.name == product.name:
                if prev_node is None:
                    self.head = current_node.next
                else:
                    prev_node.next = current_node.next
                return

            prev_node = current_node
            current_node = current_node.next

    def insert_product(self, product, index):
        new_node = Node(product)

        if index == 0:
            new_node.next = self.head
            self.head = new_node
            return

        current_node = self.head
        for i in range(index-1):
            current_node = current_node.next
            if current_node is None:
                return

        new_node.next = current_node.next
        current_node.next = new_node

    def count_products(self):
        current_node = self.head
        count = 0

        while current_node is not None:
            count += 1
            current_node = current_node.next

        return count

    def is_empty(self):
        return self.head is None

    def print_list(self):
        current_node = self.head
        while current_node is not None:
            print(f"{current_node.product.name} ({current_node.product.price})")
            current_node = current_node.next

def main():
